{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/global.ts"],
    "target": "es5",
    "lib": ["ES2020", "ESNext", "ESNext.AsyncIterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["src"],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
